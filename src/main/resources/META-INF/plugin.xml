<idea-plugin>
    <id>pro.kondratev.wicketlambdafold.wicketlambdafold</id>
    <name>WicketLambdaFold</name>
    <vendor email="andrew@kondratev.pro">Andrew Kondratev</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="pro.kondratev.wicketlambdafold.services.MyApplicationService"/>
        <projectService serviceImplementation="pro.kondratev.wicketlambdafold.services.MyProjectService"/>
        <projectConfigurable parentId="language" displayName="Apache Wicket"
                             instance="pro.kondratev.wicketlambdafold.settings.WicketLambdaFoldConfigurable"
                             id="pro.kondratev.wicketlambdafold.settings.WicketLambdaFoldConfigurable"/>
    </extensions>

    <applicationListeners>
        <listener class="pro.kondratev.wicketlambdafold.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
